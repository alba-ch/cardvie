<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="largeButton">
        <item name="android:padding">4dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">Montserrat</item>
    </style>

    <style name="text">
        <item name="android:padding">4dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="fontFamily">Montserrat</item>
    </style>

    <style name="roundImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="background">@color/transparent</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="cercleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
        <item name="color">@color/white</item>
    </style>
    
    <style name="title_large">
        <item name="android:padding">4dip</item>
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/bahnschrift</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_semilarge">
        <item name="android:padding">4dip</item>
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textAlignment">textStart</item>
        <item name="fontFamily">@font/bahnschrift</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_normal">
        <item name="android:padding">4dip</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAlignment">textStart</item>
        <item name="fontFamily">@font/bahnschrift</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_normal">
        <item name="android:padding">4dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="fontFamily">@font/bahnschrift</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_light_small">
        <item name="android:padding">4dip</item>
        <item name="android:textColor">#B9FFFFFF</item>
        <item name="android:textAlignment">textStart</item>
        <item name="fontFamily">@font/bahnschrift</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>

