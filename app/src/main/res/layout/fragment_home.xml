<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_app"
        tools:context=".ui.home.HomeFragment">

    <TextView
            android:text="@string/title_welcome"
            android:id="@+id/title_welcome"
            android:layout_width="170dp"
            android:layout_height="33dp"
            android:layout_marginEnd="8dp"
            style="@style/title_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pfp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/pfp"
            app:layout_constraintHorizontal_bias="0.156"/>

    <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pfp"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:layout_width="75dp"
            android:layout_height="74dp" tools:src="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.089"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.04"/>

    <ImageButton
            android:src="@drawable/ic_search"
            android:backgroundTint="@color/transparent"
            android:layout_width="55dp"
            android:layout_height="54dp" android:id="@+id/btn_search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.955"
            app:layout_constraintVertical_bias="0.023"/>

    <TextView
            android:text="@string/title_home"
            style="@style/title_large"
            android:layout_width="300dp"
            android:layout_height="110dp" android:id="@+id/title_home"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintTop_toBottomOf="@+id/title_username"
            app:layout_constraintVertical_bias="0.068"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="350dp"
            android:layout_height="647dp"
            tools:listitem="@layout/fragment_home_list_item"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:backgroundTint="@color/transparent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/title_home"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/recyclerView"/>
    <ImageButton
            android:src="@drawable/btn_nav_plus"
            android:backgroundTint="@color/transparent"
            android:layout_width="110dp"
            android:layout_height="110dp" android:id="@+id/btn_add"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="32dp"/>
    <TextView
            android:text="Alvie"
            style="@style/title_normal"
            android:layout_width="170dp"
            android:layout_height="29dp" android:id="@+id/title_username"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/title_welcome" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.518"/>
</androidx.constraintlayout.widget.ConstraintLayout>