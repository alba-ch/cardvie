<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_app"
        tools:context=".ui.home.HomeFragment">

    <TextView
            android:text="@string/title_play"
            android:id="@+id/title_play"
            android:layout_width="316dp"
            android:layout_height="72dp"
            style="@style/title_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.124"/>
    <ImageButton
            android:src="@drawable/btn_arrow_left"
            android:backgroundTint="@color/transparent"
            android:layout_width="110dp"
            android:layout_height="110dp" android:id="@+id/btn_arrow_left"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.269"
            android:layout_marginBottom="120dp" app:layout_constraintTop_toBottomOf="@+id/img_card"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageButton
            android:src="@drawable/btn_arrow_right"
            android:backgroundTint="@color/transparent"
            android:layout_width="110dp"
            android:layout_height="110dp" android:id="@+id/btn_arrow_right"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.72"
            android:layout_marginBottom="120dp" app:layout_constraintTop_toBottomOf="@+id/img_card"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:src="@drawable/white_corners"
            android:layout_width="307dp"
            android:layout_height="430dp" android:id="@+id/img_card"
            app:layout_constraintTop_toBottomOf="@+id/title_play"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
    />
    <ImageButton
            android:src="@drawable/btn_return"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/transparent"
            android:layout_height="wrap_content" android:id="@+id/btn_return"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>